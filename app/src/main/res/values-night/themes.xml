        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ExpectedDateText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DataSourceText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
